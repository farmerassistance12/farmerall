<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.majors.paranshusinghal.krishi.MainActivity"
    android:id="@+id/main_layout"
    android:clickable="true"
    android:background="#fff"
    android:backgroundTint="#ffffff">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:nestedScrollingEnabled="false">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/wthr_btn"
            android:drawableTop="@drawable/kweather"
            android:textAlignment="center"
            android:backgroundTint="#fbfbfb"
            android:paddingBottom="20dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:id="@+id/wthr_btn"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="0"
            android:layout_column="0"
            android:clickable="true"
            android:onClick="onClickWthr"
            android:background="@drawable/button"
            />

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:orientation="vertical"
            android:clickable="true"
            android:contextClickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:background="@drawable/button"
            android:backgroundTint="#fbfbfb"
            android:textAlignment="center"
            android:onClick="onClickNews">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/newsImageView"
              />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_news"
                android:id="@+id/newsButton"
                android:layout_marginStart="11dp"
                android:onClick="onClickNews"
                android:clickable="true" />
        </LinearLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/crop_btn"
            android:drawableTop="@drawable/icontexto_green_01"
            android:textAlignment="center"
            android:backgroundTint="#fbfbfb"
            android:paddingBottom="20dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:layout_row="0"
            android:layout_column="2"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/crop_btn"
            android:clickable="true"
            android:onClick="onClickCrop"
            android:background="@drawable/button" />
    </GridLayout>

</RelativeLayout>
